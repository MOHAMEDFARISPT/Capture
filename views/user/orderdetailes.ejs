<style>
  body {
    letter-spacing: 0.8px;
    background: linear-gradient(0deg , #fff , 50% , #74a0ff);
    background-repeat: no-repeat;    
}

.container-fluid {
    margin-top: 80px !important;
    margin-bottom: 80px !important;
}

p {
    font-size: 14px;
    margin-bottom: 7px;
}

.cursor-pointer {
    cursor: pointer;
}

a{
    text-decoration: none !important;
    color: #651FFF !important;
}

.bold{
    font-weight: 600;
}

.small{
    font-size: 12px !important;
    letter-spacing: 0.5px !important;
}

.Today{
    color: rgb(83, 83, 83);
}

.btn-outline-primary{
    background-color: #fff !important;
    color:#4bb8a9 !important;
    border:1.3px solid #4bb8a9;
    font-size: 12px;
    border-radius: 0.4em !important;
}

.btn-outline-primary:hover{
    background-color:#4bb8a9  !important;
    color:#fff !important;
    border:1.3px solid #4bb8a9;
}

.btn-outline-primary:focus,
.btn-outline-primary:active {
    outline: none !important;
    box-shadow: none !important;
    border-color: #42A5F5 !important;
}
 
#progressbar {
    margin-bottom: 30px;
    overflow: hidden;
    color: #455A64;
    padding-left: 0px;
    margin-top: 30px
}

#progressbar li {
    list-style-type: none;
    font-size: 13px;
    width: 33.33%;
    float: left;
    position: relative;
    font-weight: 400;
    color: #455A64 !important;
    
}

#progressbar #step1:before {
    content: "1";
    color: #fff;
    width: 29px;
    margin-left: 15px !important;
    padding-left: 11px !important;
}


#progressbar #step2:before {
    content: "2";
    color: #fff;
    width: 29px;

}

#progressbar #step3:before {
    content: "3";
    color: #fff;
    width: 29px;
    margin-right: 15px !important;
    padding-right: 11px !important;
}

#progressbar li:before {
    line-height: 29px;
    display: block;
    font-size: 12px;
    background: #455A64 ;
    border-radius: 50%;
    margin: auto;
}

 #progressbar li:after {
    content: '';
    width: 121%;
    height: 2px;
    background: #455A64;
    position: absolute;
    left: 0%;
    right: 0%;
    top: 15px;
    z-index: -1;
} 

#progressbar li:nth-child(2):after {
    left: 50%;
}

#progressbar li:nth-child(1):after {
    left: 25%;
    width: 121%;
}
#progressbar li:nth-child(3):after {
    left: 25% !important;
    width: 50% !important;
}

#progressbar li.active:before,
#progressbar li.active:after {
    background: #4bb8a9; 
}

.card {
    background-color: #fff ;
    box-shadow: 2px 4px 15px 0px rgb(0, 108, 170);
    z-index: 0;
}

small{
    font-size: 12px !important;
}

.a {
    justify-content: space-between !important;
}

.border-line {
    border-right: 1px solid rgb(226, 206, 226)
}

.card-footer img{
    opacity: 0.3;
}

.card-footer h5{
    font-size: 1.1em;
    color: #8C9EFF;
    cursor: pointer;
}
</style>

<body>
   
  <div class="container-fluid my-5 d-sm-flex justify-content-center">
    <div class="card px-2">
        <div class="card-header bg-white">
            <div class="row  d-flex justify-content-between ">
                
              
                <div class="d-flex justify-content-between pt-2">
                    <p class="fw-bold mb-0">Delivery Address</p>
                </div>
                <div class="d-flex justify-content-between pt-2">
                    <p class="text-muted mb-0">Name:<%= order.address.name %></p>
                </div>
                <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">Mobile: <%= order.address.mobile %></p>
                </div>
                <div class="d-flex justify-content-between mb-5">
                    <p class="text-muted mb-0">Locality: <%= order.address.locality %>,<%= order.address.pincode %>,<%= order.address.state %></p>
                 
                </div>
                <div class="d-flex justify-content-between mb-5">
                    <p class="text-muted">Order Date: <%= order.date.toLocaleDateString() %></p>
                </div>
                <div>
                    <button class="button btn btn-success" onclick="downloadInvoice('<%= order._id %>')">Download Invoice</button>

                </div>
              
                
                
               
                <div class="flex">
                    <h2 class="ml-auto mr-3">Order Details</h2>
                </div>
                
            </div>
            
        </div>
        
        <div class="card-body">
         
          <div class="card-body">
            <div class="media flex-column flex-sm-row">
                <% order.products.forEach(product => { %>
                    <div class="media-body">
                        <h5 class="bold">Product: <%= product.productId.productname %></h5>
                        <h5 class=" bold">Qnty:<%= product.quantity%></h5>
                        <h4 class="mt-3 mb-4 bold"><span class="mt-5">&#x20B9;</span><td><strong><%= product.total.toFixed(2) %></strong></td><span class="small text-muted">via <%= order.paymentMethod %></span></h4>
                        <!-- <p class="text-muted">Tracking Status on: <span class="Today">11:30pm, Today</span></p>
                        <button type="button" class="btn btn-outline-primary d-flex">Reached Hub, Delhi</button> -->
                    </div>
                    <img class="align-self-center img-fluid" src="<%= product.productId.productImage[0] %>" width="180" height="180">
               
            </div>
        </div>
        
        <div class="row px-3">
            <div class="col">
                <ul id="progressbar" >
                    <li class="step0 active " id="step1">PLACED</li>
                    <li class="step0 active text-center" id="step2">SHIPPED</li>
                    <li class="step0  text-muted text-right" id="step3">DELIVERED</li>
                </ul>
            </div>
        </div>
        <div class="card-footer bg-white px-sm-3 pt-sm-4 px-0">
            <div class="row text-center">
                <div class="col my-auto border-line"><a href="/account"><h5>Profile</h5></a></div>
                <% order.products.forEach(product => { %>
                    <div class="col my-auto border-line">
                        <% if (product.cancelstatus === 'delivered') { %>
                            <% if (order.returnReason) { %>
                                <h5>Return Accepted due to : <%= order.returnReason %></h5>
                            <% } else { %>
                                <h5>Product Delivered</h5>
                                <button onclick="showReturnReasonDropdown('<%= order._id %>', '<%= product.productId._id %>')" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">Return Product</button>
                            <% } %>
                        <% } else if (product.cancelstatus === 'canceled'){ %>
                            <h5 style="color: red;">Product Cancelled</h5>
                        <% } else { %>
                            <div onclick="cancelOrder('<%= order._id %>', '<%= product.productId._id %>')">
                                <h5>Cancel Order</h5>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
                
                
            </div>
        </div>
        
      <% }); %>
      
    </div>
</div>
<script>
    async function showReturnReasonDropdown(orderId, productId) {
        // Create a dropdown with some example reasons
        var reasons = ["Damaged", "Wrong Item", "Changed Mind", "Other"];
    
        // Build HTML for SweetAlert input
        var dropdownHtml = '<select id="returnReasonDropdown" class="swal2-select">';
        reasons.forEach(function (reason) {
            dropdownHtml += '<option value="' + reason + '">' + reason + '</option>';
        });
        dropdownHtml += '</select>';
    
        // Use SweetAlert to prompt the user
        const { value: selectedReason } = await Swal.fire({
            title: 'Select a reason for returning the product',
            html: dropdownHtml,
            showCancelButton: true,
            confirmButtonText: 'Return',
            cancelButtonText: 'Cancel',
            preConfirm: () => {
                // Get the selected value
                return document.getElementById('returnReasonDropdown').value;
            },
        });
    
        if (selectedReason) {
            // Send the data to the backend using Fetch API
            const response = await fetch('/returnProduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    orderId: orderId,
                    productId: productId,
                    reason: selectedReason,
                }),
            });
    
            if (response.ok) {
               // Show a SweetAlert success message to the user
               Swal.fire({
    icon: 'success',
    title: 'Success',
    text: 'Product returned successfully. Your amount will be credited shortly to your wallet.',
}).then((result) => {
    if (result.isConfirmed || result.isDismissed) {
        // Reload the page
        location.reload();
    }
});

            } else {
                 // Handle error response from the backend
    console.error('Error returning product:', response.statusText);
    // Show a SweetAlert error message to the user
    Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Error returning product. Please try again later.',
    });
            }
        } else {
            // The user canceled the SweetAlert prompt
            console.log('Return canceled');
        }
    }
    </script>
    
  
    <!-- Add your JavaScript scripts and other body elements here -->
  </body>
  
