<script>
    // Function to get query parameters from the URL
    function getQueryParam(name) {
        const urlSearchParams = new URLSearchParams(window.location.search);
        return urlSearchParams.get(name);
    }

    // Get the message from the URL
    const message = getQueryParam('message');

    // Check if a message is present and display it
    if (message) {
        // Create a div to display the message
        const messageDiv = document.createElement('div');
        messageDiv.textContent = message;
        messageDiv.className = 'message'; // Add a class for styling

        // Append the message div to the body or any specific container
        document.body.appendChild(messageDiv);
    }
</script>

