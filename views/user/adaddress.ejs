<div class="tab-pane fade" id="tab-account-link" role="tabpanel" aria-labelledby="tab-account-link">
    <div style="max-width: 800px; margin: auto;">
       <form action="/adaddress" method="post">
            <div style="margin-bottom: 15px;">
                <label for="name" style="display: block; margin-bottom: 5px;">full Name</label>
                <input type="text" id="fullname" name="fullname" style="width: 100%; padding: 8px; box-sizing: border-box;" placeholder="Enter your full Name" required>
            </div>
    
            <div style="margin-bottom: 15px;">
                <label for="phone" style="display: block; margin-bottom: 5px;">Phone Number:</label>
                <input type="tel" id="contact" name="contact" style="width: 100%; padding: 8px; box-sizing: border-box;" placeholder="Enter your Phone number"  required>
            </div>
    
           
    
            <div style="margin-bottom: 15px;">
                <label for="pincode" style="display: block; margin-bottom: 5px;">Pincode:</label>
                <input type="text" id="pincode" name="pincode" style="width: 100%; padding: 8px; box-sizing: border-box;" placeholder="Enter your Pincode"  required>
            </div>
    
            <div style="margin-bottom: 15px;">
                <label for="state" style="display: block; margin-bottom: 5px;">State:</label>
                <input type="text" id="state" name="state" style="width: 100%; padding: 8px; box-sizing: border-box;" placeholder="State"  required>
            </div>
    
            <div style="margin-bottom: 15px;">
                <label for="address" style="display: block; margin-bottom: 5px;">Address:</label>
                <textarea id="address" name="address" style="width: 100%; padding: 8px; box-sizing: border-box;" rows="4" placeholder="Address(House No,Building,Street,Area)"  required></textarea>
            </div>
    
            <div style="margin-bottom: 15px;">
                <label for="locality" style="display: block; margin-bottom: 5px;">Locality:</label>
                <input type="text" id="locality" name="locality" style="width: 100%; padding: 8px; box-sizing: border-box;" placeholder="Locality/Town"  required>
            </div>
    
            <div style="margin-bottom: 15px;">
                <label for="district" style="display: block; margin-bottom: 5px;">District:</label>
                <input type="text" id="district" name="district" style="width: 100%; padding: 8px; box-sizing: border-box;" placeholder="City/District"  required>
            </div>
    
            <button type="submit" style="background-color: #4caf50; color: white; padding: 10px 15px; border: none; cursor: pointer;">Save Adress</button>
        </form>
    </div>












</div>