<%- include('../adminpartials/header')%>
<%- include('../adminpartials/slidebar')%>


<div class="page-body">

 
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-sm-8 m-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header-2">
                                <h5>Edit Categery Informations</h5>
                            </div>

                            <form class="theme-form theme-form-2 mega-form" action="/admin/Editcategory/<%= Category._id %>" method="post" id="form" enctype="multipart/form-data" onsubmit="return validateForm()">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-3 mb-0">Category Name</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" name="categoryname" type="text" id="categoryname"  placeholder="" value="<%= Category.categoryname%>">
                                        <span id="categorynameError" class="error-text  text-danger"></span>
                                    </div>
                                </div>
                            
                                <div class="mb-4 row align-items-center">
                                    <label class="col-sm-3 col-form-label form-label-title">Category Image</label>
                                    <div class="form-group col-sm-9">
                                        <div class="dropzone-wrapper">
                                            <div class="dropzone-desc">
                                                <p>Choose an image file or drag it here.</p>
                                            </div>
                                            <input type="file" name="categoryImage" class="dopzone" id="categoryImage" accept=".jpg, .jpeg, .png, .webp>
                                            <span id="categoryImageError" class="error-text  text-danger"></span>
                                        </div>
                                    </div>
                                    <div>
                                        <img src="<%= Category.image %>" width="150" height="150">
                                    </div>
                                </div>
                            
                                <div class="mb-4 row align-items-center">
                                    <label for="description" class="col-sm-3 col-form-label-title"><strong>Description</strong></label>
                                    <div class="col-sm-9">
                                        <input type="text" id="description" name="description" class="form-control" placeholder="" value="<%= Category.description%>">
                                        <span id="descriptionError" class="error-text  text-danger"></span>
                                    </div>
                                </div>
                            
                                <div class="mb-4 row align-items-center">
                                    <div class="col-sm-9 offset-sm-3">
                                        <button type="submit" class="btn btn-primary">Update Category Details</button>
                                    </div>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2022 Â© Fastkart theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
      <!-- footer End  -->
</div>

<script>
    
    function validateForm() {
        var categoryName = document.getElementById('categoryname').value.trim();
        var categoryImage = document.getElementById('categoryImage').files[0];
        var description = document.getElementById('description').value.trim();
        
        var categorynameError = document.getElementById('categorynameError');
        var categoryImageError = document.getElementById('categoryImageError');
        var descriptionError = document.getElementById('descriptionError');
        
        // Reset error messages
        categorynameError.innerText = '';
        categoryImageError.innerText = '';
        descriptionError.innerText = '';

        // Validate Category Name
        if (categoryName === '') {
            categorynameError.innerText = 'Category Name cannot be empty.';
            return false;
        } else if (/\d/.test(categoryName)) {
            categorynameError.innerText = 'Category Name cannot contain numbers.';
            return false;
        }

        // Validate Category Image
        if (!categoryImage) {
            categoryImageError.innerText = 'Please choose a valid image file.';
            return false;
        }

        // Validate Description
        if (description === '') {
            descriptionError.innerText = 'Description cannot be empty.';
            return false;
        } else if (/\d/.test(description)) {
            descriptionError.innerText = 'Description cannot contain numbers.';
            return false;
        }

        // Form is valid
        return true;
    }

</script>





<%- include('../adminpartials/footer')%>