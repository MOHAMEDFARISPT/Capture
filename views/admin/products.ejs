<script  src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<%- include('../adminpartials/header')%>

<%- include('../adminpartials/slidebar')%>
<style>
    .description-cell {
        width: 50px !important; /* Set your desired fixed width */
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .description-cell:hover {
        overflow: auto;
    }
</style>

<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="title-header option-title d-sm-flex d-block">
                            <h5>Products List</h5>
                            <div class="right-options">
                                <ul>
                                    <!-- <li>
                                        <a href="javascript:void(0)">import</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0)">Export</a>
                                    </li> -->
                                    <li>
                                        <a class="btn btn-solid" href="/admin/addproducts">Add Product</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div>
                            <div class="table-responsive">
                                <table class="table all-package theme-table table-product" id="table_id">
                                    <thead>
                                        <tr>
                                            <th>Product Image</th>
                                            <th>Product Name</th>
                                            <th class="description-cell">Description</th>
                                            <th>Category</th>
                                            <th>Current Qty</th>
                                            <th>Price</th>
                                            <th>Size</th>
                                            <th>Edit</th>
                                            <th>List/unlist</th>
                                            <!-- <th>Delete</th> -->
                                        </tr>
                                    </thead>
                
                                    <tbody>
                                        <% products.forEach((item) => { %>
                                            <tr>
                                                <td><img src="<%= item.productImage[0] %>" width="50" height="50"></td>
                                                <td><%= item.productname %></td>
                                                <td class="description-cell"><%= item.description %></td>
                                                <td><%= item.category.categoryname %></td>
                                                <td><%= item.quantity %></td>
                                                <td><%= item.price %></td>
                                                <td><%= item.size %></td>
                                                <td class="d-flex justify-content-center text-center">
                                                    <a href="/admin/Editproducts?id=<%= item._id %>">
                                                        <button class="btn btn-info btn-primary">Edit</button>
                                                    </a>
                                                </td>
                                                <td class="justify-content-center text-center">
                                                    <% if (item.islist) { %>
                                                        <button class="btn btn-info btn-primary" onclick="unlistProduct('<%= item._id %>')">List</button>
                                                    <% } else { %>
                                                        <button class="btn btn-info btn-primary" onclick="unlistProduct('<%= item._id %>')">Unlist</button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                
                            <!-- Pagination Controls -->
                            <div class="d-flex justify-content-center mt-3">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination">
                                        <% if (currentPage > 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= previousPage %>" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                        <% } %>
                            
                                        <% for (let i = 1; i <= lastPage; i++) { %>
                                            <li class="page-item <% if (i === currentPage) { %>active<% } %>">
                                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                            </li>
                                        <% } %>
                            
                                        <% if (currentPage < lastPage) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= nextPage %>" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            </div>
                            
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2022 Â© Fastkart theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
</div>

<script>
    
    



   
    
    async function unlistProduct(productid) {
    try {
        const result = await Swal.fire({
            title: "Are you sure?",
            text: "",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes",
        });

        if (result.isConfirmed) {
            const response = await fetch(`/admin/unlistproducts/${productid}`, {
                method: 'POST',
            });

            if (response.ok) {
                window.location.reload();
            } else {
                // Handle non-ok response
                console.error('HTTP error! Status:', response.status);
                Swal.fire({
                    title: 'Error!',
                    text: `Failed to unlist product. HTTP error! Status: ${response.status}`,
                    icon: 'error',
                });
            }
        } else {
            // Handle cancellation
            console.log('Operation canceled');
        }
    } catch (error) {
        // Handle general errors
        console.error('Error:', error.message);
        Swal.fire({
            title: 'Error!',
            text: `Failed to unlist product. ${error.message}`,
            icon: 'error',
        });
    }
}
     

   
</script>

<%- include('../adminpartials/footer')%>