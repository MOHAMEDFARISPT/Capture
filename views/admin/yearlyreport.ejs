<%- include('../adminpartials/header')%>

<%- include('../adminpartials/slidebar')%>

<style>
  .pagination-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
}

.pagination-boxes {
    display: flex;
}

.pagination-box {
    margin: 0 5px;
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    cursor: pointer;
    height: 10px;
}

.pagination-box.active {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}


</style>


<div class="page-body">
    <!-- ... (existing code) ... -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="title-header option-title d-sm-flex d-block">
                            <h5>Yearly Sales Reports</h5>
                            <div class="right-options">
                                <ul>
                                    
                                        <li>
                                            <!-- Print button with inline styling and window.print() function -->
                                            <button class="btn" style="background-color: blue; color: white;" onclick="window.print()">Print</button>
                                        </li>
                                    
                                </ul>
                            </div>
                        </div>
                        <div>
                            <div class="table-responsive">
                              <!-- admin/dailyreport.ejs -->

                              <table class="table all-package theme-table table-product" id="table_id">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Order ID</th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let totalAmount = 0; %>
                                    <% if (data.length > 0) { %>
                                        <% data.forEach(order => { %>
                                            <% order.products.forEach(product => { %>
                                                <tr>
                                                    <td><%= order.date.toLocaleDateString() %></td>
                                                    <td><%= order.orderId %></td>
                                                    <td><%= product.productId.productname %></td>
                                                    <td><%= product.productId.price %></td>
                                                    <td><%= product.quantity %></td>
                                                    <td><%= product.total %></td>
                                                </tr>
                                                <% totalAmount += product.total; %>
                                            <% }) %>
                                        <% }) %>
                                    <% } else { %>
                                        <!-- Display a message when no sales are available -->
                                        <tr>
                                            <td colspan="6">No Sales available</td>
                                        </tr>
                                    <% } %>
                            
                                    <% if (totalAmount > 0) { %>
                                        <!-- Display total amount at the end of the table -->
                                        <tr>
                                            <td colspan="5"><strong>Total Amount:</strong></td>
                                            <td><strong><%= totalAmount %></strong></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <!-- Display pagination links -->
                           
                            
                            
                            
                            </div>
                            <div class="pagination-container">
                                <div class="pagination-boxes">
                                    <% if (totalPages > 1) { %>
                                        <% if (currentPage > 1) { %>
                                            <div class="pagination-box">
                                                <a href="?page=<%= currentPage - 1 %>">&laquo;</a>
                                            </div>
                                        <% } %>
                            
                                        <% for (let page = Math.max(1, currentPage - 2); page <= Math.min(totalPages, currentPage + 2); page++) { %>
                                            <div class="pagination-box <%= currentPage === page ? 'active' : '' %>">
                                                <a href="?page=<%= page %>"><%= page %></a>
                                            </div>
                                        <% } %>
                            
                                        <% if (currentPage < totalPages) { %>
                                            <div class="pagination-box">
                                                <a href="?page=<%= currentPage + 1 %>">&raquo;</a>
                                            </div>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Container-fluid Ends-->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2022 Â© Fastkart theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
</div>






<%- include('../adminpartials/footer')%>