<%- include('../adminpartials/header')%>
<%- include('../adminpartials/slidebar')%>

<div class="page-body">
    <!-- New Product Add Start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-8 m-auto">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header-2">
                                    <h5>Category Information</h5>
                                </div>

                                <form class="theme-form theme-form-2 mega-form" action="/categoryad" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Category Name</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" name="categoryname" type="text" placeholder="Category Name" oninput="validateCategoryName(this)">
                                            <span id="categoryNameError" class="error-message text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="col-sm-3 col-form-label form-label-title">Category Image</label>
                                        <div class="form-group col-sm-9">
                                            <div class="dropzone-wrapper">
                                                <div class="dropzone-desc">
                                                    <p>Choose an image file or drag it here.</p>
                                                </div>
                                                <input type="file" name="categoryImage" class="dopzone" oninput="validateCategoryImage(this)" accept=".jpg, .jpeg, .png, .webp">
                                                <span id="categoryImageError" class="error-message text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label for="description" class="col-sm-3 col-form-label-title"><strong>Description</strong></label>
                                        <div class="col-sm-9">
                                            <input type="text" id="description" name="description" class="form-control" placeholder="Enter description" oninput="validateDescription(this)">
                                            <span id="descriptionError" class="error-message text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <div class="col-sm-9 offset-sm-3">
                                            <button type="submit" class="btn btn-primary" id="submitButton" disabled>Submit</button>
                                        </div>
                                    </div>
                                </form>

                                <script>
                                    function validateCategoryName(input) {
                                        var categoryName = input.value.trim();
                                        var categoryNameError = document.getElementById("categoryNameError");

                                        if (categoryName === "") {
                                            categoryNameError.innerText = "Category Name cannot be empty.";
                                        }  else {
                                            categoryNameError.innerText = "";
                                        }

                                        enableSubmitButton();
                                    }

                                    function validateDescription(input) {
    var description = input.value.trim();
    var descriptionError = document.getElementById("descriptionError");

    if (description === "") {
        descriptionError.innerText = "Description cannot be empty.";
    } else if (/\d/.test(description)) {
        descriptionError.innerText = "Description cannot contain numbers.";
    } else {
        descriptionError.innerText = "";
    }

    enableSubmitButton(); // Assuming this function exists to enable the submit button
}

                                

                                    function enableSubmitButton() {
                                        var submitButton = document.getElementById("submitButton");
                                        var categoryNameError = document.getElementById("categoryNameError");
                                        var categoryImageError = document.getElementById("categoryImageError");
                                        var descriptionError = document.getElementById("descriptionError");

                                        var isFormValid = !categoryNameError.innerText && !categoryImageError.innerText && !descriptionError.innerText;

                                        submitButton.disabled = !isFormValid;
                                    }

                                    function validateForm() {
                                        // Additional form-level validation can be added here if needed.
                                        return true;
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- New Product Add End -->

    <!-- footer Start -->
    <div class="container-fluid">
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2022 Â© Fastkart theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- footer En -->

</div>




